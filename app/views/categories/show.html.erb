<h1 class="text-4xl text-slate-50 font-bold px-6 mt-4 mb-3"><%= @category.name%></h1>
<div class="px-5">
<%= form_with scope: :post, class: "flex flex-col bg-[#111827] w-full rounded-md p-10 shadow-md",url: "/createpost", local: true do |f|%>
<%= f.label :title, class:"form-label inline-block mt-2 text-slate-50 text-lg"%>
<%= f.text_field :title , class: "
        form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        text-[#1d4ed8]
        bg-white bg-clip-padding
        border border-solid border-gray-300 border-2
        rounded
        transition
        ease-in-out
        m-0
        focus:text-[#1d4ed8] focus:bg-white focus:border-[#1e3a8a] focus:outline-none
      "%>
<%= f.label :content, class:"form-label inline-block mt-2 text-slate-50 text-lg"%>
<%= f.text_area :content, class: "
        form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
        text-[#1d4ed8]
        bg-white bg-clip-padding
        border border-solid border-gray-300 border-2
        rounded
        transition
        ease-in-out
        m-0
        focus:text-[#1d4ed8] focus:bg-white focus:border-[#1e3a8a] focus:outline-none
      "%>
<%= f.label :url, class:"form-label inline-block mt-2 text-slate-50 text-lg"%>
<%= f.text_field :url, class: "
        form-control
        block
        w-full
        px-3
        py-1.5
        text-base
        font-normal
         text-[#1d4ed8]
        bg-white bg-clip-padding
        border border-solid border-gray-300 border-2
        rounded
        transition
        ease-in-out
        m-0
        focus:text-[#1d4ed8] focus:bg-white focus:border-[#1e3a8a] focus:outline-none
      "%>
<%= f.hidden_field :category_id, value: @category.id %>
<%= f.submit class: "mt-4 bg-transparent hover:bg-blue-500 text-blue-700 font-semibold hover:text-white py-2 px-4 border border-blue-500 hover:border-transparent rounded w-40"%>
<%end%>
</div>
<div class="flex flex-col md:flex-row">
<% @posts.each do |post|%>
<a href=<%= "/post/#{post.id}"%> class="md:w-1/3">
    <div class="max-w-sm rounded overflow-hidden shadow-lg m-5 bg-[#111827]">
      <img class="w-full" src=<%= post.url%> alt="Mountain">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2"><%= post.title%></div>
        <p class="text-gray-700 text-base">
          <%= post.content[1..300]%>
        </p>
      </div>
    </div>
</a>
<% end %>
</div>
</div>
